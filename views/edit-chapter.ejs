
<h1 class="text-xl font-semibold mb-4">Edit Chapter</h1>
<form action="/manga/<%= manga.slug %>/<%= chapter.slug %>/edit" method="POST" class="bg-surface rounded p-4 space-y-4">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div>
    <label for="title" class="block text-sm mb-1">Chapter Title</label>
    <input type="text" class="w-full bg-surface2 rounded px-3 py-2" id="title" name="title" value="<%= chapter.title %>" required>
  </div>
  <div>
    <button type="submit" class="px-4 py-2 rounded bg-brand hover:bg-indigo-500 text-white">Update Chapter</button>
  </div>
</form>

<form action="/manga/<%= manga.slug %>/<%= chapter.slug %>/delete" method="POST" class="mt-3" onsubmit="return confirm('Are you sure you want to delete this chapter?');">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <button type="submit" class="px-4 py-2 rounded bg-rose-600 hover:bg-rose-500">Delete Chapter</button>
</form>
