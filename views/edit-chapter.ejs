
<h1 class="title has-text-white">Edit Chapter</h1>
<form action="/manga/<%= manga.id %>/<%= chapter.id %>/edit" method="POST">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="field">
    <label for="title" class="label has-text-white">Chapter Title</label>
    <div class="control">
      <input type="text" class="input" id="title" name="title" value="<%= chapter.title %>" required>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <button type="submit" class="button is-primary">Update Chapter</button>
    </div>
  </div>
</form>

<form action="/manga/<%= manga.id %>/<%= chapter.id %>/delete" method="POST" class="mt-3" onsubmit="return confirm('Are you sure you want to delete this chapter?');">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="field">
    <div class="control">
      <button type="submit" class="button is-danger">Delete Chapter</button>
    </div>
  </div>
</form>
