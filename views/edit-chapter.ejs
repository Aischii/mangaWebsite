
<h1 class="mb-4">Edit Chapter</h1>
<form action="/manga/<%= manga.id %>/<%= chapter.id %>/edit" method="POST">
  <div class="mb-3">
    <label for="title" class="form-label">Chapter Title</label>
    <input type="text" class="form-control" id="title" name="title" value="<%= chapter.title %>" required>
  </div>
  <button type="submit" class="btn btn-primary">Update Chapter</button>
</form>

<form action="/manga/<%= manga.id %>/<%= chapter.id %>/delete" method="POST" class="mt-3" onsubmit="return confirm('Are you sure you want to delete this chapter?');">
  <button type="submit" class="btn btn-danger">Delete Chapter</button>
</form>
