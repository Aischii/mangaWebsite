<div class="max-w-md mx-auto bg-surface rounded p-6 mt-10">
  <h1 class="text-xl font-semibold text-center mb-4">Verify Youâ€™re Human</h1>
  <p class="text-gray-300 text-sm mb-4 text-center">Please complete the check to continue.</p>
  <form action="/verify-turnstile" method="POST" class="space-y-3">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input type="hidden" name="returnTo" value="<%= returnTo || '/' %>">
    <% if (turnstileEnabled && turnstileSiteKey) { %>
      <div class="cf-turnstile" data-sitekey="<%= turnstileSiteKey %>" data-theme="auto"></div>
      <button type="submit" class="w-full bg-brand hover:bg-indigo-500 text-white px-3 py-2 rounded">Continue</button>
    <% } else { %>
      <div class="text-sm text-gray-300">Verification disabled in development. Continue.</div>
      <button type="submit" class="w-full bg-brand hover:bg-indigo-500 text-white px-3 py-2 rounded">Continue</button>
    <% } %>
  </form>
</div>
