<h1 class="text-xl font-semibold mb-4">Upload Chapter for <%= manga.title %></h1>
<form action="/manga/<%= manga.slug %>/upload-chapter" method="POST" enctype="multipart/form-data" class="bg-surface rounded p-4 space-y-4">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div>
    <label for="chapterTitle" class="block text-sm mb-1">Chapter Title</label>
    <input type="text" class="w-full bg-surface2 rounded px-3 py-2" id="chapterTitle" name="chapterTitle" required>
  </div>
  <div>
    <label for="pages" class="block text-sm mb-1">Chapter Pages</label>
    <input class="w-full bg-surface2 rounded px-3 py-2" type="file" id="pages" name="pages" multiple required>
  </div>
  <div>
    <button type="submit" class="px-4 py-2 rounded bg-brand hover:bg-indigo-500 text-white">Upload Chapter</button>
  </div>
</form>

