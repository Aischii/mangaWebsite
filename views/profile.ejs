<div class="max-w-6xl mx-auto">
  <h1 class="text-2xl font-semibold mb-6">My Profile</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-start">
    <!-- Left column: Overview + Settings -->
    <div class="space-y-6 md:col-span-1">
      <!-- Overview card -->
      <div class="bg-surface rounded-lg border border-white/5 p-6">
        <div class="flex items-center gap-4">
          <img src="<%= user.avatar || '/avatars/default.svg' %>" class="w-16 h-16 rounded-full object-cover bg-surface2 disable-save" loading="lazy" decoding="async" draggable="false" oncontextmenu="return false;"/>
          <div class="min-w-0">
            <p class="text-xs text-gray-400">Username</p>
            <p class="font-semibold truncate"><%= user.username %></p>
            <p class="text-xs text-gray-400 mt-2">Nickname</p>
            <p class="truncate"><%= user.nickname || user.username %></p>
          </div>
        </div>
      </div>

      <!-- Nickname card -->
      <div class="bg-surface rounded-lg border border-white/5 p-6">
        <h2 class="font-semibold mb-3">Change Nickname</h2>
        <form action="/profile/nickname" method="POST" class="flex gap-2 flex-col sm:flex-row items-stretch">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <input type="text" name="nickname" class="flex-1 min-w-0 bg-surface2 rounded px-3 py-2" placeholder="Nickname" value="<%= user.nickname || '' %>">
          <button class="px-4 py-2 rounded bg-brand text-white shrink-0 w-full sm:w-auto">Save</button>
        </form>
      </div>

      <!-- Security + Avatar card -->
      <div class="bg-surface rounded-lg border border-white/5 p-6 space-y-4">
        <h2 class="font-semibold">Security</h2>
        <form action="/profile/password" method="POST" class="space-y-2">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <input type="password" name="currentPassword" class="w-full bg-surface2 rounded px-3 py-2" placeholder="Current password">
          <input type="password" name="newPassword" class="w-full bg-surface2 rounded px-3 py-2" placeholder="New password (min 6)">
          <button class="w-full px-3 py-2 rounded bg-brand text-white">Update Password</button>
        </form>
        <div class="border-t border-white/5 pt-4">
          <h3 class="font-semibold mb-2">Change Avatar</h3>
          <form action="/profile/avatar" method="POST" enctype="multipart/form-data" class="space-y-2">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="file" name="avatar" class="w-full bg-surface2 rounded px-3 py-2" accept="image/*" required>
            <p class="text-xs text-gray-400">Max 250×250 – auto‑cropped & converted to WebP</p>
            <button class="w-full px-3 py-2 rounded bg-brand text-white">Upload</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Right column: Bookmarks -->
    <div class="md:col-span-2">
      <div class="bg-surface rounded-lg border border-white/5 p-6">
        <h2 class="text-lg font-semibold mb-3">My Bookmarks</h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
          <% mangaLibrary.forEach(manga => { %>
            <a href="/manga/<%= manga.slug %>" class="group block bg-surface2 rounded overflow-hidden hover:ring-2 hover:ring-brand transition">
              <div class="relative w-full pt-[150%]">
                <img src="<%= manga.cover %>" alt="<%= manga.title %>" class="absolute inset-0 w-full h-full object-cover">
              </div>
              <div class="p-3">
                <p class="text-sm font-semibold line-clamp-2 group-hover:text-brand"><%= manga.title %></p>
              </div>
            </a>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</div>
