<% const _genres = (Array.isArray(manga.genre) ? manga.genre : (manga.genre || '').split(',')).map(g=>g.trim()).filter(Boolean); %>
<% const _type = (_genres.find(g => /manhwa|manhua|manga/i.test(g)) || manga.type || '-'); %>

<div class="max-w-6xl mx-auto">
  <div class="flex flex-col lg:flex-row gap-6 items-start">
    <!-- Left: Poster + Actions -->
    <div class="w-full lg:w-1/3 space-y-4 min-w-0">
      <div class="relative w-full pt-[150%] rounded overflow-hidden bg-surface2 shadow-lg">
      <img src="<%= manga.cover %>" alt="<%= manga.title %>" class="absolute inset-0 w-full h-full object-cover disable-save" loading="lazy" decoding="async" draggable="false" oncontextmenu="return false;">
      </div>
      <div class="space-y-2">
        <% const _cont = (typeof progress !== 'undefined' && progress && (manga.chapters||[]).find(c => c.id === progress.chapter_id)) || null; %>
        <% if (_cont) { %>
          <a href="/manga/<%= manga.slug %>/<%= _cont.slug %>" class="block w-full text-center px-4 py-2 rounded bg-emerald-600 hover:bg-emerald-500 text-white">Continue Reading</a>
        <% } %>
        <% if (manga.chapters && manga.chapters.length) { %>
          <% const latest = manga.chapters[manga.chapters.length - 1]; %>
          <a href="/manga/<%= manga.slug %>/<%= latest.slug %>" class="block w-full text-center px-4 py-2 rounded bg-brand hover:bg-indigo-500 text-white">Read Latest</a>
        <% } %>
        <% if (user) { %>
          <% if (user && user.bookmarks && user.bookmarks.includes(manga.id)) { %>
            <form action="/manga/<%= manga.slug %>/unbookmark" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="block w-full px-4 py-2 rounded bg-rose-600 hover:bg-rose-500">Remove Bookmark</button>
            </form>
          <% } else { %>
            <form action="/manga/<%= manga.slug %>/bookmark" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="block w-full px-4 py-2 rounded bg-surface2 hover:bg-surface">Bookmark</button>
            </form>
          <% } %>
        <% } else { %>
          <button class="block w-full px-4 py-2 rounded bg-surface2 hover:bg-surface" data-family-safe-guest>Bookmark</button>
        <% } %>
      </div>
    </div>

    <!-- Right: Title + Synopsis + Meta -->
    <div class="w-full lg:flex-1 space-y-4 min-w-0">
      <div class="flex items-start justify-between gap-3">
        <div class="min-w-0">
          <h1 class="text-3xl font-bold leading-tight mb-1 break-words"><%= manga.title %></h1>
          <% if (manga.otherTitle) { %>
            <p class="text-sm text-gray-400 break-anywhere mb-2">Also known as: <span class="text-gray-300"><%= manga.otherTitle %></span></p>
          <% } %>
          <div class="flex flex-wrap gap-2 text-sm">
            <span class="px-3 py-1 rounded bg-surface2">Facebook</span>
            <span class="px-3 py-1 rounded bg-surface2">Twitter</span>
            <span class="px-3 py-1 rounded bg-surface2">WhatsApp</span>
            <span class="px-3 py-1 rounded bg-surface2">Pinterest</span>
          </div>
        </div>
        <% if (user && user.role === 'admin') { %>
          <a href="/manga/<%= manga.slug %>/edit" class="text-sm px-3 py-1.5 rounded bg-surface2 hover:bg-surface">Edit</a>
        <% } %>
      </div>

      <div class="bg-surface rounded p-4">
        <p class="font-semibold mb-2">Synopsis</p>
        <div class="text-gray-200 break-anywhere whitespace-pre-wrap"><%= manga.synopsis || 'No synopsis provided.' %></div>
      </div>

      <div class="grid sm:grid-cols-2 gap-4">
        <div class="bg-surface rounded p-4 text-sm">
          <div class="space-y-1">
            <p><span class="text-gray-300">Author:</span> <span class="text-gray-200"><%= manga.author || '-' %></span></p>
            <p><span class="text-gray-300">Artist:</span> <span class="text-gray-200"><%= manga.artist || '-' %></span></p>
            <p><span class="text-gray-300">Status:</span> <span class="text-gray-200"><%= manga.status || 'Ongoing' %></span></p>
            <p><span class="text-gray-300">Type:</span> <span class="text-gray-200"><%= _type %></span></p>
          </div>
        </div>
        <div class="bg-surface rounded p-4 text-sm">
          <p class="text-gray-300 mb-2">Genres</p>
          <div class="flex flex-wrap gap-2">
            <% if (_genres.length) { %>
              <% _genres.forEach(g => { %>
                <span class="px-2 py-1 text-xs rounded-full bg-surface2"><%= g %></span>
              <% }) %>
            <% } else { %>
              <span class="text-gray-400">-</span>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-8 max-w-6xl mx-auto">
  <div class="flex items-center justify-between mb-3">
    <h2 class="text-xl font-semibold">Chapters</h2>
    <% if (user && user.role === 'admin') { %>
      <a href="/manga/<%= manga.slug %>/upload-chapter" class="text-sm px-3 py-1.5 rounded bg-surface2 hover:bg-surface">Upload Chapter</a>
    <% } %>
  </div>
  <div class="space-y-4">
    <% if (Array.isArray(volumeGroups) && volumeGroups.length) { %>
      <div class="flex items-center gap-2 mb-2">
        <label for="jumpVolume" class="text-sm text-gray-300">Jump to volume</label>
        <select id="jumpVolume" class="bg-surface2 rounded px-2 py-1 text-sm">
          <% volumeGroups.forEach(g => { %>
            <option value="#vol-<%= g.key.replace(/\s+/g,'-') %>"><%= g.label %></option>
          <% }) %>
        </select>
      </div>
    <% } %>
    <% (volumeGroups || []).forEach(group => { %>
      <details id="vol-<%= group.key.replace(/\s+/g,'-') %>" class="bg-surface rounded overflow-hidden" <%= group.label==='Unknown Volume' ? 'open' : '' %>>
        <summary class="px-3 py-2 border-b border-white/5 text-sm text-gray-300 cursor-pointer select-none"><%= group.label %></summary>
        <div class="divide-y divide-white/5">
          <% group.chapters.forEach(chapter => { %>
            <div class="flex items-center justify-between p-3 hover:bg-surface2">
              <a href="/manga/<%= manga.slug %>/<%= chapter.slug %>" class="truncate"><%= chapter.title %></a>
              <% if (user && user.role === 'admin') { %>
                <a href="/manga/<%= manga.slug %>/<%= chapter.slug %>/edit" class="text-sm px-3 py-1 rounded bg-surface2 hover:bg-surface">Edit</a>
              <% } %>
            </div>
          <% }) %>
        </div>
      </details>
    <% }) %>
  </div>

  <script type="application/ld+json">
    <%- JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Book',
      name: manga.title,
      author: manga.author || undefined,
      image: manga.cover,
      genre: (manga.genre || '').split(',').map(g=>g.trim()).filter(Boolean),
      workExample: (manga.chapters||[]).map(function(ch){ return { '@type':'Chapter','name': ch.title, 'url': '/manga/'+manga.slug+'/'+ch.slug }; })
    }) %>
  </script>
  <% if (Array.isArray(related) && related.length) { %>
  <div class="mt-8">
    <h3 class="font-semibold mb-3">Related Titles</h3>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-4">
      <% related.forEach(r => { %>
        <a href="/manga/<%= r.slug %>" class="group block bg-surface rounded overflow-hidden border border-white/5 hover:shadow">
          <div class="relative w-full pt-[150%]">
            <img src="<%= r.cover %>" alt="<%= r.title %>" class="absolute inset-0 w-full h-full object-cover" loading="lazy" decoding="async">
          </div>
          <div class="p-2">
            <p class="text-sm font-semibold line-clamp-2 group-hover:text-brand"><%= r.title %></p>
          </div>
        </a>
      <% }) %>
    </div>
  </div>
  <% } %>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const sel = document.getElementById('jumpVolume');
      if (!sel) return;
      sel.addEventListener('change', () => {
        const el = document.querySelector(sel.value);
        if (el) {
          el.open = true;
          el.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  </script>
</div>

<!-- Reactions + Comments -->
<div class="mt-8 max-w-6xl mx-auto space-y-4">
  <div class="bg-surface rounded p-4">
    <h3 class="font-semibold mb-3">What do you think?</h3>
    <div class="flex flex-wrap gap-2 items-center">
      <% const emojis = ['up','funny','love','surprised','angry','sad']; %>
      <% const labels = { up:'Upvote', funny:'Funny', love:'Love', surprised:'Surprised', angry:'Angry', sad:'Sad' }; %>
      <% emojis.forEach(e => { %>
        <form action="/manga/<%= manga.slug %>/react" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <input type="hidden" name="emoji" value="<%= e %>">
          <button class="px-3 py-1.5 rounded bg-surface2 hover:bg-surface text-sm">
            <span class="font-semibold"><%= (reactions && reactions[e]) || 0 %></span> <%= labels[e] %>
          </button>
        </form>
      <% }) %>
    </div>
  </div>

  <div class="bg-surface rounded p-4">
    <h3 class="font-semibold mb-3">Comments</h3>
    <% if (user) { %>
      <form action="/manga/<%= manga.slug %>/comment" method="POST" class="mb-4">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <textarea name="body" rows="3" class="w-full bg-surface2 rounded px-3 py-2" placeholder="Join the discussion..."></textarea>
        <div class="mt-2"><button class="px-4 py-2 rounded bg-brand hover:bg-indigo-500 text-white">Post</button></div>
      </form>
    <% } else { %>
      <p class="text-sm text-gray-300 mb-3">Log in to join the conversation.</p>
    <% } %>
    <div class="space-y-4">
      <% (comments || []).forEach(c => { %>
        <div class="flex items-start gap-3">
          <img src="<%= c.avatar || '/avatars/default.svg' %>" alt="avatar" width="40" height="40" class="w-10 h-10 rounded-full object-cover bg-surface2">
          <div class="flex-1 min-w-0">
            <p class="text-sm font-semibold"><%= c.nickname || c.username %> <span class="text-xs text-gray-400"><%= c.created_at %></span></p>
            <p class="text-gray-200 break-words"><%= c.body %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>
