
<div class="row">
  <div class="col-md-4">
    <img src="/manga/<%= manga.id %>/<%= manga.cover %>" alt="<%= manga.title %>" class="img-fluid rounded">
  </div>
  <div class="col-md-8">
    <h1>
      <%= manga.title %>
      <% if (user) { %>
        <a href="/manga/<%= manga.id %>/edit" class="btn btn-sm btn-outline-light"><i class="fas fa-pencil-alt"></i></a>
      <% } %>
    </h1>
    <p><strong>Alternative Title:</strong> <%= manga.otherTitle %></p>
    <p><strong>Author:</strong> <%= manga.author %></p>
    <p><strong>Artist:</strong> <%= manga.artist %></p>
    <p><strong>Genre:</strong> <%= manga.genre.join(', ') %></p>
    <p><strong>Synopsis:</strong> <%= manga.synopsis %></p>
  </div>
</div>

<hr class="my-4">

<div class="d-flex justify-content-between align-items-center">
  <h2>Chapters</h2>
  <% if (user) { %>
    <a href="/manga/<%= manga.id %>/upload-chapter" class="btn btn-primary">Upload Chapter</a>
  <% } %>
</div>
<table class="table table-dark table-striped mt-2">
  <thead>
    <tr>
      <th>Chapter</th>
      <% if (user) { %>
        <th>Edit</th>
      <% } %>
    </tr>
  </thead>
  <tbody>
    <% manga.chapters.forEach(chapter => { %>
      <tr>
        <td><a href="/manga/<%= manga.id %>/<%= chapter.id %>" class="text-white text-decoration-none"><%= chapter.title %></a></td>
        <% if (user) { %>
          <td><a href="/manga/<%= manga.id %>/<%= chapter.id %>/edit" class="btn btn-sm btn-outline-light"><i class="fas fa-pencil-alt"></i></a></td>
        <% } %>
      </tr>
    <% }); %>
  </tbody>
</table>
