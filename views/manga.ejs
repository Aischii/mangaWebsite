<% const _genres = (Array.isArray(manga.genre) ? manga.genre : (manga.genre || '').split(',')).map(g=>g.trim()).filter(Boolean); %>
<% const _type = (_genres.find(g => /manhwa|manhua|manga/i.test(g)) || manga.type || '-'); %>

<div class="max-w-6xl mx-auto px-3 sm:px-4">
  <div class="flex flex-col lg:flex-row gap-6 items-start">
    <!-- Left: Poster + Actions -->
    <div class="w-full lg:w-1/3 space-y-4 min-w-0">
      <div class="relative w-full pt-[150%] rounded overflow-hidden bg-surface2 shadow-soft">
        <img src="<%= manga.cover %>" alt="<%= manga.title %>" class="absolute inset-0 w-full h-full object-cover disable-save" loading="lazy" decoding="async" sizes="(min-width:1024px) 28vw, 100vw" draggable="false" oncontextmenu="return false;">
        <div class="absolute top-2 left-2 flex gap-1">
          <% if (manga.rating === '18+') { %>
            <span class="px-2 py-0.5 text-[10px] font-semibold rounded bg-rose-700 text-white">18+</span>
          <% } %>
        </div>
      </div>
      <div class="flex flex-col gap-3">
        <% const _cont = (typeof progress !== 'undefined' && progress && (manga.chapters||[]).find(c => c.id === progress.chapter_id)) || null; %>
        <% const _first = (manga.chapters && manga.chapters.length) ? manga.chapters[0] : null; %>
        <% if (_cont) { %>
          <a href="/manga/<%= manga.slug %>/<%= _cont.slug %>" class="block w-full text-center px-4 py-2 rounded bg-emerald-600 hover:bg-emerald-500 text-white">Continue Reading</a>
        <% } %>
        <% if (_first) { %>
          <a href="/manga/<%= manga.slug %>/<%= _first.slug %>" class="block w-full text-center px-4 py-2 rounded bg-brand hover:bg-indigo-500 text-white">Read Now</a>
        <% } %>
        <% if (manga.chapters && manga.chapters.length) { const latest = manga.chapters[manga.chapters.length - 1]; %>
          <a href="/manga/<%= manga.slug %>/<%= latest.slug %>" class="block w-full text-center px-4 py-2 rounded bg-surface2 hover:bg-surface">Read Latest</a>
        <% } %>
        <% if (user) { %>
          <% if (user && user.bookmarks && user.bookmarks.includes(manga.id)) { %>
            <form action="/manga/<%= manga.slug %>/unbookmark" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="block w-full px-4 py-2 rounded bg-rose-600 hover:bg-rose-500">Remove Bookmark</button>
            </form>
          <% } else { %>
            <form action="/manga/<%= manga.slug %>/bookmark" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="block w-full px-4 py-2 rounded bg-surface2 hover:bg-surface">Bookmark</button>
            </form>
          <% } %>
        <% } else { %>
          <button class="block w-full px-4 py-2 rounded bg-surface2 hover:bg-surface" data-family-safe-guest>Bookmark</button>
        <% } %>
      </div>
    </div>

    <!-- Right: Title + Synopsis + Meta -->
    <div class="w-full lg:flex-1 space-y-4 min-w-0">
      <div class="flex items-start justify-between gap-3">
        <div class="min-w-0">
          <h1 class="text-3xl font-extrabold leading-tight mb-1 break-words"><%= manga.title %></h1>
          <% if (manga.otherTitle) { %>
            <p class="text-sm text-gray-400 break-anywhere mb-2">Also known as: <span class="text-gray-300"><%= manga.otherTitle %></span></p>
          <% } %>
          <% if (manga.author || manga.artist) { %>
            <p class="text-sm text-gray-300">By <span class="text-gray-100"><%= manga.author || '-' %></span><% if (manga.artist) { %> â€¢ Art: <span class="text-gray-100"><%= manga.artist %></span><% } %></p>
          <% } %>
        </div>
        <% if (user && user.role === 'admin') { %>
          <a href="/manga/<%= manga.slug %>/edit" class="text-sm px-3 py-1.5 rounded bg-surface2 hover:bg-surface">Edit</a>
        <% } %>
      </div>

      <div class="bg-surface rounded p-4">
        <p class="font-semibold mb-2">Synopsis</p>
        <div class="text-gray-200 break-anywhere whitespace-pre-wrap"><%= manga.synopsis || 'No synopsis provided.' %></div>
      </div>

      <div class="grid sm:grid-cols-2 gap-4">
        <div class="bg-surface rounded p-4 text-sm">
          <div class="grid grid-cols-2 gap-y-1">
            <p class="text-gray-300">Status:</p><p class="text-gray-200"><%= manga.status || 'Ongoing' %></p>
            <p class="text-gray-300">Type:</p><p class="text-gray-200"><%= _type %></p>
          </div>
        </div>
        <div class="bg-surface rounded p-4 text-sm">
          <p class="text-gray-300 mb-2">Genres</p>
          <div class="flex flex-wrap gap-2">
            <% if (_genres.length) { %>
              <% _genres.forEach(g => { %>
                <span class="px-2 py-1 text-xs rounded-full bg-surface2 border border-white/5"><%= g %></span>
              <% }) %>
            <% } else { %>
              <span class="text-gray-400">-</span>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-12 mb-10 max-w-6xl mx-auto">
  <div class="flex items-center justify-between mb-3">
    <h2 class="text-xl font-semibold">Chapters</h2>
    <% if (user && user.role === 'admin') { %>
      <a href="/manga/<%= manga.slug %>/upload-chapter" class="text-sm px-3 py-1.5 rounded bg-surface2 hover:bg-surface">Upload Chapter</a>
    <% } %>
  </div>
  <div class="space-y-4">
    <% if (Array.isArray(volumeGroups) && volumeGroups.length) { %>
      <div class="flex items-center gap-2 mb-2">
        <label for="jumpVolume" class="text-sm text-gray-300">Jump to volume</label>
        <select id="jumpVolume" class="bg-surface2 rounded px-2 py-1 text-sm">
          <% volumeGroups.forEach(g => { %>
            <option value="#vol-<%= g.key.replace(/\s+/g,'-') %>"><%= g.label %></option>
          <% }) %>
        </select>
      </div>
    <% } %>
    <% (volumeGroups || []).forEach(group => { %>
      <details id="vol-<%= group.key.replace(/\s+/g,'-') %>" class="bg-surface rounded overflow-hidden" <%= group.label==='Unknown Volume' ? 'open' : '' %>>
        <summary class="px-3 py-2 border-b border-white/5 text-sm text-gray-300 cursor-pointer select-none"><%= group.label %></summary>
        <div class="divide-y divide-white/5">
          <% group.chapters.forEach(chapter => { %>
            <div class="flex items-center justify-between p-3 hover:bg-surface2">
              <a href="/manga/<%= manga.slug %>/<%= chapter.slug %>" class="truncate"><%= chapter.title %></a>
              <% if (chapter.created_at) { %>
                <span class="text-xs text-gray-400 ml-3 whitespace-nowrap"><%= chapter.created_at %></span>
              <% } %>
              <% if (user && user.role === 'admin') { %>
                <div class="flex items-center gap-2">
                  <form action="/manga/<%= manga.slug %>/chapter/<%= chapter.id %>/move" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="dir" value="up">
                    <button class="text-xs px-2 py-1 rounded bg-surface2 hover:bg-surface" title="Move up" aria-label="Move up">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="18 15 12 9 6 15"></polyline></svg>
                    </button>
                  </form>
                  <form action="/manga/<%= manga.slug %>/chapter/<%= chapter.id %>/move" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="dir" value="down">
                    <button class="text-xs px-2 py-1 rounded bg-surface2 hover:bg-surface" title="Move down" aria-label="Move down">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
                    </button>
                  </form>
                  <a href="/manga/<%= manga.slug %>/<%= chapter.slug %>/edit" class="text-sm px-3 py-1 rounded bg-surface2 hover:bg-surface">Edit</a>
                </div>
              <% } %>
            </div>
          <% }) %>
        </div>
      </details>
    <% }) %>
  </div>

  <script type="application/ld+json">
    <%- JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Book',
      name: manga.title,
      author: manga.author || undefined,
      image: manga.cover,
      genre: (manga.genre || '').split(',').map(g=>g.trim()).filter(Boolean),
      workExample: (manga.chapters||[]).map(function(ch){ return { '@type':'Chapter','name': ch.title, 'url': '/manga/'+manga.slug+'/'+ch.slug }; })
    }) %>
  </script>
  <% if (Array.isArray(related) && related.length) { %>
  <div class="mt-12 mb-8">
    <h3 class="font-semibold mb-3">Related Titles</h3>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-4">
      <% related.forEach(r => { %>
        <%- include('partials/manga-card', { m: r }) %>
      <% }) %>
    </div>
  </div>
  <% } %>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const sel = document.getElementById('jumpVolume');
      if (!sel) return;
      sel.addEventListener('change', () => {
        const el = document.querySelector(sel.value);
        if (el) {
          el.open = true;
          el.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
      // Show more replies toggles
      document.querySelectorAll('[data-toggle-replies]').forEach(btn => {
        btn.addEventListener('click', () => {
          const more = btn.previousElementSibling;
          if (more && more.hasAttribute('data-more-replies')) {
            const hidden = more.classList.toggle('hidden');
            btn.textContent = hidden ? btn.textContent.replace('Show less','Show more') : btn.textContent.replace('Show more','Show less');
          }
        });
      });
    });
  </script>
</div>

<!-- Reactions + Comments -->
<div class="mt-12 max-w-6xl mx-auto space-y-8">
  <div id="reactions" class="bg-surface rounded p-4">
    <h3 class="font-semibold mb-3">What do you think?</h3>
    <div class="flex flex-wrap gap-2 items-center">
      <% const emojis = ['up','funny','love','surprised','angry','sad']; %>
      <% const labels = { up:'Upvote', funny:'Funny', love:'Love', surprised:'Surprised', angry:'Angry', sad:'Sad' }; %>
      <% emojis.forEach(e => { %>
        <form action="/manga/<%= manga.slug %>/react" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <input type="hidden" name="emoji" value="<%= e %>">
          <input type="hidden" name="redirectHash" value="#reactions">
          <button class="px-3 py-1.5 rounded bg-surface2 hover:bg-surface text-sm">
            <span class="font-semibold"><%= (reactions && reactions[e]) || 0 %></span> <%= labels[e] %>
          </button>
        </form>
      <% }) %>
    </div>
  </div>

  <div id="comments" class="bg-surface rounded p-4 mt-8">
    <div class="flex items-center justify-between mb-3">
      <h3 class="font-semibold">Comments</h3>
      <div class="text-sm space-x-2">
        <a class="px-2 py-1 rounded bg-surface2 <%= (sortMode==='best') ? 'ring-1 ring-brand' : '' %>" href="?sort=best">Best</a>
        <a class="px-2 py-1 rounded bg-surface2 <%= (sortMode==='new' || sortMode==='newest') ? 'ring-1 ring-brand' : '' %>" href="?sort=new">Newest</a>
        <a class="px-2 py-1 rounded bg-surface2 <%= (sortMode==='old' || sortMode==='oldest') ? 'ring-1 ring-brand' : '' %>" href="?sort=old">Oldest</a>
      </div>
    </div>
    <% if (user) { %>
      <form action="/manga/<%= manga.slug %>/comment" method="POST" class="mb-4">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="redirectHash" value="#comments">
        <textarea name="body" rows="3" class="w-full bg-surface2 rounded px-3 py-2" placeholder="Join the discussion..."></textarea>
        <div class="mt-2">
          <% if (turnstileEnabled && turnstileSiteKey) { %>
          <div class="cf-turnstile mb-2" data-sitekey="<%= turnstileSiteKey %>" data-theme="auto"></div>
          <% } %>
          <button class="px-4 py-2 rounded bg-brand hover:bg-indigo-500 text-white">Post</button>
        </div>
      </form>
    <% } else { %>
      <p class="text-sm text-gray-300 mb-3">Log in to join the conversation.</p>
    <% } %>
    <div class="space-y-4">
      <% (comments || []).forEach(c => { %>
        <div class="flex items-start gap-3">
          <img src="<%= c.avatar || '/avatars/default.svg' %>" alt="avatar" width="40" height="40" class="w-10 h-10 rounded-full object-cover bg-surface2">
          <div class="flex-1 min-w-0">
            <p class="text-sm font-semibold"><%= c.nickname || c.username %> <span class="text-xs text-gray-400"><%= c.created_at %></span></p>
            <p class="text-gray-200 break-words"><%= c.body %></p>
            <div class="mt-2 flex items-center gap-2 text-xs text-gray-300">
              <form action="/comment/<%= c.id %>/react" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="emoji" value="up">
                <input type="hidden" name="returnTo" value="/manga/<%= manga.slug %>#comments">
                <button class="px-2 py-1 rounded bg-surface2">Like (<%= c.upvotes || 0 %>)</button>
              </form>
              <form action="/comment/<%= c.id %>/react" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="emoji" value="down">
                <input type="hidden" name="returnTo" value="/manga/<%= manga.slug %>#comments">
                <button class="px-2 py-1 rounded bg-surface2">Dislike (<%= c.downvotes || 0 %>)</button>
              </form>
              <% if (user) { %>
              <details>
                <summary class="cursor-pointer select-none px-2 py-1 rounded bg-surface2">Reply</summary>
                <form action="/manga/<%= manga.slug %>/comment" method="POST" class="mt-2">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <input type="hidden" name="parent_id" value="<%= c.id %>">
                  <input type="hidden" name="redirectHash" value="#comments">
                  <textarea name="body" rows="2" class="w-full bg-surface2 rounded px-3 py-2" placeholder="Write a reply..."></textarea>
                  <div class="mt-2">
                    <% if (turnstileEnabled && turnstileSiteKey) { %>
                    <div class="cf-turnstile mb-2" data-sitekey="<%= turnstileSiteKey %>" data-theme="auto"></div>
                    <% } %>
                    <button class="px-3 py-1.5 rounded bg-brand text-white">Post Reply</button>
                  </div>
                </form>
              </details>
              <% } %>
            </div>
            <% if (c.replies && c.replies.length) { %>
              <div class="mt-3 space-y-3 pl-6 border-l border-white/5">
                <% const extra = c.replies.slice(3); const first = c.replies.slice(0,3); %>
                <% first.forEach(r => { %>
                  <div class="flex items-start gap-3">
                    <img src="<%= r.avatar || '/avatars/default.svg' %>" alt="avatar" width="32" height="32" class="w-8 h-8 rounded-full object-cover bg-surface2">
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-semibold"><%= r.nickname || r.username %> <span class="text-xs text-gray-400"><%= r.created_at %></span></p>
                      <p class="text-gray-200 break-words"><%= r.body %></p>
                    </div>
                  </div>
                <% }) %>
                <% if (extra.length) { %>
                  <div data-more-replies class="hidden">
                  <% extra.forEach(r => { %>
                    <div class="flex items-start gap-3 mt-3">
                      <img src="<%= r.avatar || '/avatars/default.svg' %>" alt="avatar" width="32" height="32" class="w-8 h-8 rounded-full object-cover bg-surface2">
                      <div class="flex-1 min-w-0">
                        <p class="text-sm font-semibold"><%= r.nickname || r.username %> <span class="text-xs text-gray-400"><%= r.created_at %></span></p>
                        <p class="text-gray-200 break-words"><%= r.body %></p>
                      </div>
                    </div>
                  <% }) %>
                  </div>
                  <button type="button" class="mt-2 text-xs px-2 py-1 rounded bg-surface2 hover:bg-surface" data-toggle-replies>Show more replies (<%= extra.length %>)</button>
                <% } %>
              </div>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

