<h1 class="text-xl font-semibold mb-4">Upload New Manga</h1>
<form action="/upload" method="POST" enctype="multipart/form-data" class="bg-surface rounded p-4 space-y-4">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div>
    <label for="title" class="block text-sm mb-1">Title</label>
    <input type="text" class="w-full bg-surface2 rounded px-3 py-2" id="title" name="title" required>
  </div>
  <div>
    <label for="otherTitle" class="block text-sm mb-1">Alternative Title</label>
    <input type="text" class="w-full bg-surface2 rounded px-3 py-2" id="otherTitle" name="otherTitle">
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div>
      <label for="author" class="block text-sm mb-1">Author</label>
      <input type="text" class="w-full bg-surface2 rounded px-3 py-2" id="author" name="author">
    </div>
    <div>
      <label for="artist" class="block text-sm mb-1">Artist</label>
      <input type="text" class="w-full bg-surface2 rounded px-3 py-2" id="artist" name="artist">
    </div>
  </div>
  <div>
    <label for="genre" class="block text-sm mb-1">Genre (comma separated)</label>
    <input type="text" class="w-full bg-surface2 rounded px-3 py-2" id="genre" name="genre">
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div>
      <label for="status" class="block text-sm mb-1">Status</label>
      <select id="status" name="status" class="w-full bg-surface2 rounded px-3 py-2">
        <option value="Ongoing">Ongoing</option>
        <option value="Completed">Completed</option>
        <option value="Hiatus">Hiatus</option>
      </select>
    </div>
    <div>
      <label for="type" class="block text-sm mb-1">Type</label>
      <select id="type" name="type" class="w-full bg-surface2 rounded px-3 py-2">
        <option value="Manga">Manga</option>
        <option value="Manhwa">Manhwa</option>
        <option value="Manhua">Manhua</option>
      </select>
    </div>
  </div>
  <div>
    <label for="synopsis" class="block text-sm mb-1">Synopsis</label>
    <textarea class="w-full bg-surface2 rounded px-3 py-2" id="synopsis" name="synopsis" rows="3"></textarea>
  </div>
  <div>
    <label for="cover" class="block text-sm mb-1">Cover Image</label>
    <input class="w-full bg-surface2 rounded px-3 py-2" type="file" id="cover" name="cover" required>
  </div>
  <div>
    <label class="inline-flex items-center gap-2 text-sm">
      <input type="checkbox" id="rating" name="rating" class="rounded"> 18+
    </label>
  </div>
  <div>
    <button type="submit" class="px-4 py-2 rounded bg-brand hover:bg-indigo-500 text-white">Upload</button>
  </div>
</form>
