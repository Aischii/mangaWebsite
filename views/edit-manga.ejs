
<h1 class="text-xl font-semibold mb-4">Edit Manga</h1>
<form action="/manga/<%= manga.slug %>/edit" method="POST" class="bg-surface rounded p-4 space-y-4">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div>
    <label for="title" class="block text-sm mb-1">Title</label>
    <input type="text" class="w-full bg-surface2 rounded px-3 py-2" id="title" name="title" value="<%= manga.title %>" required>
  </div>
  <div>
    <label for="otherTitle" class="block text-sm mb-1">Alternative Title</label>
    <input type="text" class="w-full bg-surface2 rounded px-3 py-2" id="otherTitle" name="otherTitle" value="<%= manga.otherTitle %>">
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div>
      <label for="author" class="block text-sm mb-1">Author</label>
      <input type="text" class="w-full bg-surface2 rounded px-3 py-2" id="author" name="author" value="<%= manga.author %>">
    </div>
    <div>
      <label for="artist" class="block text-sm mb-1">Artist</label>
      <input type="text" class="w-full bg-surface2 rounded px-3 py-2" id="artist" name="artist" value="<%= manga.artist %>">
    </div>
  </div>
  <div>
    <label for="genre" class="block text-sm mb-1">Genre</label>
    <input type="text" class="w-full bg-surface2 rounded px-3 py-2" id="genre" name="genre" value="<%= Array.isArray(manga.genre) ? manga.genre.join(', ') : manga.genre %>">
  </div>
  <div>
    <label for="synopsis" class="block text-sm mb-1">Synopsis</label>
    <textarea class="w-full bg-surface2 rounded px-3 py-2" id="synopsis" name="synopsis" rows="3"><%= manga.synopsis %></textarea>
  </div>
  <div>
    <label class="inline-flex items-center gap-2 text-sm">
      <input type="checkbox" id="rating" name="rating" <%= manga.rating === '18+' ? 'checked' : '' %> class="rounded"> 18+
    </label>
  </div>
  <div>
    <button type="submit" class="px-4 py-2 rounded bg-brand hover:bg-indigo-500 text-white">Update Manga</button>
  </div>
</form>

<form action="/manga/<%= manga.slug %>/delete" method="POST" class="mt-3" onsubmit="return confirm('Are you sure you want to delete this manga?');">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <button type="submit" class="px-4 py-2 rounded bg-rose-600 hover:bg-rose-500">Delete Manga</button>
</form>
