<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AsagiScans - <%= title %></title>
  <% const pageMeta = (typeof meta !== 'undefined' ? meta : {}); %>
  <meta name="description" content="<%= pageMeta.description || 'AsagiScans manga reader and library' %>">
  <meta property="og:title" content="<%= pageMeta.ogTitle || ('AsagiScans - ' + title) %>">
  <meta property="og:description" content="<%= pageMeta.description || 'AsagiScans manga reader and library' %>">
  <% if (pageMeta.image) { %><meta property="og:image" content="<%= pageMeta.image %>"><% } %>
  <% if (typeof canonical !== 'undefined' && canonical) { %><link rel="canonical" href="<%= canonical %>"><% } %>
  <link rel="stylesheet" href="/css/tailwind.css">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/webp" href="/favicon/site_logo.webp">
  <style>
    img.disable-save { -webkit-user-drag: none; user-select: none; }
    /* Mobile-safe text wrapping for long URLs and unbroken strings */
    .break-anywhere { overflow-wrap: anywhere; word-break: break-word; }
    /* Prevent horizontal scrollbars from accidental overflow */
    body, html { max-width: 100vw; overflow-x: hidden; }
  </style>
</head>
<body class="overflow-x-hidden">
  <div id="app" class="min-h-screen bg-bg text-gray-100">
    <!-- Top nav -->
    <header id="site-header" class="sticky top-0 z-40 bg-surface/95 backdrop-blur border-b border-white/5 transition-opacity duration-150">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between gap-3">
        <div class="flex items-center gap-3">
          <button id="mobile-menu-open" type="button" aria-expanded="false" class="md:hidden px-3 py-1.5 rounded bg-surface2/80 text-gray-100 border border-white/10 hover:bg-surface">Menu</button>
          <a href="/" class="text-xl font-bold tracking-wide"><span class="text-white">Asagi</span><span class="text-brand">Scans</span></a>
        </div>
        <form action="/" method="GET" class="hidden md:flex items-center gap-2 w-full max-w-md">
          <input class="w-full bg-surface2 rounded px-3 py-2 text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-brand" type="text" name="q" placeholder="Search manga, authors…">
          <button class="bg-brand hover:bg-indigo-500 text-white px-3 py-2 rounded text-sm" type="submit">Search</button>
        </form>
        <nav class="hidden md:flex items-center gap-3">
          <% if (user) { %>
            <a href="/profile" class="px-3 py-1.5 rounded bg-surface2 hover:bg-surface">Profile</a>
            <a href="/logout" class="px-3 py-1.5 rounded bg-surface2 hover:bg-surface">Logout</a>
          <% } else { %>
            <a href="/login" class="px-3 py-1.5 rounded bg-surface2 hover:bg-surface">Login</a>
          <% } %>
          <% if (user && user.role === 'admin') { %>
            <a href="/upload" class="px-3 py-1.5 rounded bg-brand hover:bg-indigo-500 text-white">Upload</a>
          <% } %>
          <button id="mobile-search-toggle" class="md:hidden px-3 py-1.5 rounded bg-surface2">Search</button>
        </nav>
      </div>
      <div id="mobile-search" class="md:hidden px-4 pb-3 hidden">
        <form action="/" method="GET" class="flex items-center gap-2">
          <input class="w-full bg-surface2 rounded px-3 py-2 text-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-brand" type="text" name="q" placeholder="Search manga, authors…">
          <button class="bg-brand hover:bg-indigo-500 text-white px-3 py-2 rounded text-sm" type="submit">Go</button>
        </form>
      </div>
    </header>

    <!-- Content and sidebar -->
    <main class="max-w-7xl mx-auto px-3 sm:px-6 lg:px-8 py-4 sm:py-6 grid grid-cols-1 lg:grid-cols-12 gap-5 lg:gap-6">
      <section class="lg:col-span-9">
        <%- body %>
      </section>
      <aside class="lg:col-span-3 space-y-4 pt-6">
        <div class="bg-surface rounded p-4">
          <h3 class="font-semibold mb-3">Settings</h3>
          <% if (user) { %>
          <form action="/settings/family-safe" method="POST" class="space-y-2">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="block w-full px-3 py-2 rounded text-sm text-center <%= user.familySafe ? 'bg-emerald-600 hover:bg-emerald-500' : 'bg-rose-600 hover:bg-rose-500' %>">
              Family Safe: <%= user.familySafe ? 'On' : 'Off' %>
            </button>
          </form>
          <% } else { %>
            <button class="block w-full px-3 py-2 rounded text-sm bg-emerald-600 hover:bg-emerald-500 text-center" data-family-safe-guest>Family Safe: On (Login to change)</button>
          <% } %>
        </div>
        <div class="bg-surface rounded p-4 text-sm text-gray-300">&copy; AsagiScans 2025</div>
      </aside>
    </main>
  </div>

  <div id="login-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center">
    <div class="absolute inset-0 bg-black/60" id="login-modal-backdrop"></div>
    <div class="relative bg-surface rounded p-5 w-full max-w-md shadow-lg">
      <div class="flex items-center justify-between mb-3">
        <p class="text-lg font-semibold">Login Required</p>
        <button id="login-modal-close" class="px-2 py-1 rounded bg-surface2">?</button>
      </div>
      <div class="text-sm text-gray-300">
        <p>You need to be logged in to change the Family Safe setting.</p>
      </div>
      <div class="mt-4 flex gap-2 justify-end">
        <a href="/login" class="px-3 py-2 rounded bg-brand hover:bg-indigo-500 text-white">Login</a>
        <a href="/register" class="px-3 py-2 rounded bg-surface2 hover:bg-surface">Register</a>
      </div>
    </div>
  </div>

  <!-- Mobile drawer -->
  <div id="mobile-drawer" class="hidden fixed inset-0 z-50">
    <div id="mobile-drawer-backdrop" class="absolute inset-0 bg-black/60"></div>
    <aside class="absolute left-0 top-0 h-full w-72 bg-surface shadow-xl p-4 overflow-y-auto space-y-4">
      <div class="flex items-center justify-between">
        <a href="/" class="text-lg font-bold">Asagi<span class="text-brand">Scans</span></a>
        <button id="mobile-menu-close" class="px-2 py-1 rounded bg-surface2">?</button>
      </div>
      <nav class="space-y-2">
        <a href="/" class="block px-3 py-2 rounded bg-surface2 hover:bg-surface">Home</a>
        <% if (user) { %>
          <a href="/profile" class="block px-3 py-2 rounded bg-surface2 hover:bg-surface">Profile</a>
          <a href="/logout" class="block px-3 py-2 rounded bg-surface2 hover:bg-surface">Logout</a>
        <% } else { %>
          <a href="/login" class="block px-3 py-2 rounded bg-surface2 hover:bg-surface">Login</a>
          <a href="/register" class="block px-3 py-2 rounded bg-surface2 hover:bg-surface">Register</a>
        <% } %>
        <% if (user && user.role === 'admin') { %>
          <a href="/upload" class="block px-3 py-2 rounded bg-brand hover:bg-indigo-500 text-white">Upload</a>
        <% } %>
      </nav>
      <div class="bg-surface2 rounded p-3">
        <p class="text-sm mb-2">Settings</p>
        <% if (user) { %>
          <form action="/settings/family-safe" method="POST" class="space-y-2">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="block w-full px-3 py-2 rounded text-sm text-center <%= user.familySafe ? 'bg-emerald-600 hover:bg-emerald-500' : 'bg-rose-600 hover:bg-rose-500' %>">Family Safe: <%= user.familySafe ? 'On' : 'Off' %></button>
          </form>
        <% } else { %>
          <button class="block w-full px-3 py-2 rounded text-sm bg-emerald-600 hover:bg-emerald-500 text-center" data-family-safe-guest>Family Safe: On (Login to change)</button>
        <% } %>
      </div>
    </aside>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Disable right-click and dragging on images to discourage saving
      document.addEventListener('contextmenu', (e) => {
        const t = e.target;
        if (t && t.tagName && t.tagName.toLowerCase() === 'img') {
          e.preventDefault();
        }
      });
      document.addEventListener('dragstart', (e) => {
        const t = e.target;
        if (t && t.tagName && t.tagName.toLowerCase() === 'img') {
          e.preventDefault();
        }
      });
      const mobileSearchBtn = document.getElementById('mobile-search-toggle');
      const mobileSearch = document.getElementById('mobile-search');
      if (mobileSearchBtn && mobileSearch) {
        mobileSearchBtn.addEventListener('click', () => mobileSearch.classList.toggle('hidden'));
      }

      // Mobile drawer handlers + header hide/show + slide animation
      const drawer = document.getElementById('mobile-drawer');
      const drawerOpen = document.getElementById('mobile-menu-open');
      const drawerClose = document.getElementById('mobile-menu-close');
      const drawerBackdrop = document.getElementById('mobile-drawer-backdrop');
      const drawerPanel = drawer ? drawer.querySelector('aside') : null;
      const siteHeader = document.getElementById('site-header');
      const openDrawer = () => {
        if (!drawer || !drawerPanel) return;
        drawer.classList.remove('hidden');
        requestAnimationFrame(() => drawerPanel.classList.remove('-translate-x-full'));
        if (siteHeader) siteHeader.classList.add('opacity-0','pointer-events-none');
        if (drawerOpen) drawerOpen.setAttribute('aria-expanded','true');
        document.body.classList.add('overflow-hidden');
      };
      const closeDrawer = () => {
        if (!drawer || !drawerPanel) return;
        const finish = () => {
          drawer.classList.add('hidden');
          if (siteHeader) siteHeader.classList.remove('opacity-0','pointer-events-none');
          if (drawerOpen) drawerOpen.setAttribute('aria-expanded','false');
          document.body.classList.remove('overflow-hidden');
        };
        drawerPanel.classList.add('-translate-x-full');
        drawerPanel.addEventListener('transitionend', finish, { once: true });
        setTimeout(finish, 350);
      };
      if (drawerOpen) drawerOpen.addEventListener('click', openDrawer);
      if (drawerClose) drawerClose.addEventListener('click', closeDrawer);
      if (drawerBackdrop) drawerBackdrop.addEventListener('click', closeDrawer);
      document.addEventListener('keydown', (e) => { if (e.key === 'Escape' && drawer && !drawer.classList.contains('hidden')) closeDrawer(); });

      // Beautify mobile menu items and synchronize guest family-safe label
      const drawerLinks = document.querySelectorAll('#mobile-drawer nav a');
      drawerLinks.forEach(a => a.classList.add('text-gray-100','border','border-white/10','bg-surface2/80','hover:bg-surface'));
      const drawerCloseBtn = document.getElementById('mobile-menu-close');
      if (drawerCloseBtn) {
        drawerCloseBtn.textContent = 'Close';
        drawerCloseBtn.classList.add('hover:bg-surface','border','border-white/10','text-gray-100');
        drawerCloseBtn.setAttribute('aria-label','Close menu');
      }
      const guestFsButtons = document.querySelectorAll('#mobile-drawer [data-family-safe-guest]');
      guestFsButtons.forEach(btn => {
        btn.textContent = 'Family Safe: On (Login to change)';
        btn.classList.remove('bg-rose-600','hover:bg-rose-500');
        btn.classList.add('bg-emerald-600','hover:bg-emerald-500');
      });

      const loginModal = document.getElementById('login-modal');
      const loginModalClose = document.getElementById('login-modal-close');
      const loginModalBackdrop = document.getElementById('login-modal-backdrop');
      const guestButtons = document.querySelectorAll('[data-family-safe-guest]');
      const openModal = () => loginModal && loginModal.classList.remove('hidden');
      const closeModal = () => loginModal && loginModal.classList.add('hidden');
      guestButtons.forEach(btn => btn.addEventListener('click', openModal));
      if (loginModalClose) loginModalClose.addEventListener('click', closeModal);
      if (loginModalBackdrop) loginModalBackdrop.addEventListener('click', closeModal);
    });
  </script>
</body>
</html>

