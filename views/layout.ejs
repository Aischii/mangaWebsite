<!DOCTYPE html>
<html lang="en" class="has-aside-left has-aside-expanded">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AsagiScans - <%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
</head>
<body>
  <div id="app">
    <aside class="aside is-placed-left is-expanded">
      <div class="aside-tools">
        <div class="aside-tools-label">
          <span><b>Asagi</b>Scans</span>
        </div>
      </div>
      <div class="menu is-menu-main">
        <p class="menu-label">General</p>
        <ul class="menu-list">
          <li>
            <a href="/" class="is-active">
              <span class="icon"><i class="fas fa-home"></i></span>
              <span class="menu-item-label">Home</span>
            </a>
          </li>
        </ul>
        <p class="menu-label">Account</p>
        <ul class="menu-list">
          <% if (user) { %>
            <li>
              <a href="/profile">
                <span class="icon"><i class="fas fa-user"></i></span>
                <span class="menu-item-label">Profile</span>
              </a>
            </li>
            <li>
              <a href="/logout">
                <span class="icon"><i class="fas fa-sign-out-alt"></i></span>
                <span class="menu-item-label">Logout</span>
              </a>
            </li>
          <% } else { %>
            <li>
              <a href="/login">
                <span class="icon"><i class="fas fa-sign-in-alt"></i></span>
                <span class="menu-item-label">Login</span>
              </a>
            </li>
          <% } %>
        </ul>
        <p class="menu-label">Admin</p>
        <ul class="menu-list">
          <% if (user && user.role === 'admin') { %>
            <li>
              <a href="/upload">
                <span class="icon"><i class="fas fa-upload"></i></span>
                <span class="menu-item-label">Upload Manga</span>
              </a>
            </li>
          <% } %>
        </ul>
      </div>
      <div class="menu is-menu-bottom">
        <p class="menu-label">Settings</p>
        <ul class="menu-list">
          <li>
            <div class="navbar-item">
              <% if (user) { %>
                <form action="/settings/family-safe" method="POST">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <button type="submit" class="button <%= user.familySafe ? 'is-success' : 'is-danger' %> is-fullwidth">
                    <span class="icon"><i class="fas fa-shield-alt"></i></span>
                    <span>Family Safe: <%= user.familySafe ? 'On' : 'Off' %></span>
                  </button>
                </form>
              <% } else { %>
                <button class="button is-danger is-fullwidth" id="family-safe-guest-button">
                  <span class="icon"><i class="fas fa-shield-alt"></i></span>
                  <span>Family Safe: Off</span>
                </button>
              <% } %>
            </div>
          </li>
        </ul>
        <div class="footer">
            <p>
                &copy; AsagiScans 2025
            </p>
        </div>
      </div>
    </aside>
    <section class="section is-main-section">
      <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item is-hidden-desktop jb-aside-mobile-toggle">
                <span class="icon"><i class="fas fa-bars"></i></span>
            </a>
        </div>
        <div class="navbar-menu">
            <div class="navbar-end">
                <div class="navbar-item">
                    <form action="/" method="GET">
                        <div class="field has-addons">
                            <div class="control">
                                <input class="input" type="text" placeholder="Search" name="q">
                            </div>
                            <div class="control">
                                <button class="button is-info" type="submit">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
                <% if (user) { %>
                    <a href="/profile" class="navbar-item">
                        <span class="icon"><i class="fas fa-user"></i></span>
                    </a>
                <% } %>
            </div>
        </div>
      </nav>
      <div class="container is-fluid">
        <%- body %>
      </div>
    </section>
  </div>

  <div class="modal" id="login-modal">
    <div class="modal-background"></div>
    <div class="modal-card">
      <header class="modal-card-head">
        <p class="modal-card-title">Login Required</p>
        <button class="delete" aria-label="close"></button>
      </header>
      <section class="modal-card-body">
        <p>You need to be logged in to change the Family Safe setting.</p>
      </section>
      <footer class="modal-card-foot">
        <a href="/login" class="button is-success">Login</a>
        <a href="/register" class="button">Register</a>
      </footer>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const asideMobileToggle = document.querySelector('.jb-aside-mobile-toggle');
      const aside = document.querySelector('.aside');
      asideMobileToggle.addEventListener('click', () => {
        aside.classList.toggle('is-expanded');
        document.documentElement.classList.toggle('has-aside-expanded');
      });

      const loginModal = document.getElementById('login-modal');
      if (loginModal) {
        const familySafeGuestButton = document.getElementById('family-safe-guest-button');
        const modalCloseButton = loginModal.querySelector('.delete');
        const modalBackground = loginModal.querySelector('.modal-background');

        if (familySafeGuestButton) {
          familySafeGuestButton.addEventListener('click', () => {
            loginModal.classList.add('is-active');
          });
        }

        if(modalCloseButton) {
            modalCloseButton.addEventListener('click', () => {
                loginModal.classList.remove('is-active');
            });
        }

        if(modalBackground) {
            modalBackground.addEventListener('click', () => {
                loginModal.classList.remove('is-active');
            });
        }
      }
    });
  </script>
</body>
</html>