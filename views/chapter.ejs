
<div class="row">
  <div class="col-12">
    <h1 class="text-center"><a href="/manga/<%= manga.id %>" class="text-white text-decoration-none"><%= manga.title %></a> - <%= chapter %></h1>
    <div class="d-flex justify-content-center align-items-center my-3">
      <a href="#" class="btn btn-primary">Previous Chapter</a>
      <select class="form-select mx-3 chapter-select" style="width: auto;">
        <% manga.chapters.forEach(ch => { %>
          <option value="/manga/<%= manga.id %>/<%= ch.id %>" <%= ch.id === chapter ? 'selected' : '' %>><%= ch.title %></option>
        <% }); %>
      </select>
      <a href="#" class="btn btn-primary">Next Chapter</a>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-12 d-flex flex-column align-items-center">
    <% pages.forEach(page => { %>
      <img src="<%= page %>" class="img-fluid mb-2" alt="Page">
    <% }); %>
  </div>
</div>
